    .form-check-label { margin-left: 30px; }
  </style>

  {% include 'topBar/topBar.html.twig' %}
  <div class="container">
    <form id="test_submit"
      role="form"
      action="{{ path('result_test') }}"
      method="post">
      {% for question in questions %}
        <div class="panel panel-default">
          <div class="panel-heading">
            Question NÂ°{{ question.id }} {{ question.title }}
          </div>
